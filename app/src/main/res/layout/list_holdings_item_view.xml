<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.instacoind.www.coind.MainActivity">

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:src="@drawable/ic_btc_b"
            android:paddingBottom="5dp"
            />
    </FrameLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_crypto_price_display"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="@string/demo_value_zero"
            android:paddingTop="20dp"
            android:paddingLeft="5dp"/>
        <TextView
            android:id="@+id/list_fiat_pref_display"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="USD"
            />
        <TextView
            android:id="@+id/list_pref_pi"
            android:textColor="@color/list_index_color"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Coindesk"
            android:layout_alignBottom="@+id/list_fiat_pref_display"
            android:layout_toRightOf="@+id/list_fiat_pref_display"
            android:layout_toEndOf="@+id/list_fiat_pref_display" />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_amount_crypto_owned"
            android:paddingTop="4dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="0.000"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/list_converted_holdings_amount_display"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="place"
            android:paddingTop="18dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    </FrameLayout>

</LinearLayout>
